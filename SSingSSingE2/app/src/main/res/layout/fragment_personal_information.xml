<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".PersonalInformationFragment">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                      android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                      android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="8dp" android:layout_marginStart="8dp">

            <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="사고신고"
                    android:textSize="30dp"
                    android:layout_marginTop="30dp" android:background="@android:color/holo_blue_bright"
                    android:id="@+id/buttonAccident"/>

            <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="예약내역"
                    android:textSize="30dp"
                    android:layout_marginTop="30dp" android:background="@android:color/holo_blue_bright"
                    android:id="@+id/buttonReserveList"/>

            <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="예약취소"
                    android:textSize="30dp"
                    android:layout_marginTop="30dp" android:background="@android:color/holo_blue_bright"
                    android:id="@+id/buttonCancelReserve"/>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>